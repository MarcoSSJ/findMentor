<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PersonalDataChange"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_personalDataChange_grade"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="请输入职称"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toEndOf="@+id/textView_personalDataChange7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <TextView
        android:id="@+id/textView_personalDataChange7"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="职称："
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_personalDataChange3"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_personalDataChange_inTro"
        android:layout_width="210dp"
        android:layout_height="149dp"
        android:background="@null"
        android:ems="10"
        android:gravity="top"
        android:hint="请输入简介"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:minLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toEndOf="@+id/textView_personalDataChange4"
        app:layout_constraintTop_toBottomOf="@+id/editText_personalDataChange_range"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/textView_personalDataChange5"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="研究领域："
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_personalDataChange7"
        app:layout_constraintVertical_bias="0.014" />

    <EditText
        android:id="@+id/editText_personalDataChange_age"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="请输入年龄"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toEndOf="@+id/textView_personalDataChange3"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_personalDataChange"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_personalDataChange3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="年龄："
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_personalDataChange2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_personalDataChange4"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="个人简介："
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_personalDataChange5"
        app:layout_constraintVertical_bias="0.172" />

    <EditText
        android:id="@+id/editText_personalDataChange_range"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginTop="17dp"
        android:background="@null"
        android:ems="10"
        android:gravity="top"
        android:hint="请输入研究领域"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:minLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toEndOf="@+id/textView_personalDataChange5"
        app:layout_constraintTop_toBottomOf="@+id/editText_personalDataChange_grade"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_personalDataChange2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="性别："
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <ImageView
        android:id="@+id/imageView_personalDataChange"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        tools:ignore="VectorDrawableCompat" />


    <RadioGroup
        android:id="@+id/radioGroup_personalDataChange"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toEndOf="@+id/textView_personalDataChange2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radioButton_personalDataChange_male"
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:checked="true"
            android:text="男" />

        <RadioButton
            android:id="@+id/radioButton_personalDataChange_female"
            android:layout_width="74dp"
            android:layout_height="40dp"
            android:text="女" />
    </RadioGroup>


    <Button
        android:id="@+id/button_personalDataChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_drawable_big"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="保存修改"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />

</androidx.constraintlayout.widget.ConstraintLayout>